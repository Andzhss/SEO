{
  "manifest_version": 3,
  "name": "SEO Auditor (Side Panel)",
  "version": "1.1",
  "description": "Veic SEO auditu sānjoslā (Side Panel), kas nepazūd pārslēdzot tabus.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Atvērt SEO Auditu"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}
